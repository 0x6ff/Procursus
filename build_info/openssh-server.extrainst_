#!/bin/sh

set -e

case "$1" in
    (install)
    @MEMO_PREFIX@/bin/launchctl load -w @MEMO_PREFIX@/Library/LaunchDaemons/com.openssh.sshd.plist
    ;;
	(upgrade)
	@MEMO_PREFIX@/bin/launchctl unload @MEMO_PREFIX@/Library/LaunchDaemons/com.openssh.sshd.plist
    @MEMO_PREFIX@/bin/launchctl load @MEMO_PREFIX@/Library/LaunchDaemons/com.openssh.sshd.plist
	;;
	(*)
	exit 0
	;;
esac

exit 0